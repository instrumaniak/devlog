    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "country": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "projects": {
      "via": "client_companies",
      "collection": "project"
    },
    "is_direct_employer": {
      "type": "boolean",
      "required": true
    },
    "employment_start_date": {
      "type": "date"
    },
    "employment_end_date": {
      "type": "date"
    }
